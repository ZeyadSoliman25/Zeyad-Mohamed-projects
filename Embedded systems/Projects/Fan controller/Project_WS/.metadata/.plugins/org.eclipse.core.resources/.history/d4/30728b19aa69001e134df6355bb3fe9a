#include "pwm.h"
#include <avr/io.h>

void PWM_Timer0_Start(uint8 duty_cycle){
	uint8 set_duty_cycle = 0;

	if (duty_cycle == 100){
		set_duty_cycle = 255;
	}
	else {
		set_duty_cycle = (uint8)(duty_cycle/100) * 256;
	}

	TCNT0 = 0;
	OCR0  = set_duty_cycle;
	DDRB  = DDRB | (1<<PB3);
	TCCR0 = (1<<WGM00) | (1<<WGM01) | (1<<COM01) | (1<<CS01);
}
