#include "lcd.h"
#include "lm35_sensor.h"
#include "dc_motor.h"
#include "adc.h"
#include "std_types.h"


int main (){
	uint8 temperature = 0;

	LCD_init();
	DcMotor_Init();
	ADC_init();

	LCD_displayString("FAN is OFF");
	LCD_moveCursor(1,0);

	while(1){
		LCD_moveCursor(1,0);
		temperature = LM35_getTemperature();
		LCD_displayString("Temp = ");
		LCD_intgerToString(temperature);
		LCD_displayString(" C");

		if (temperature >= 120){
			LCD_moveCursor(0,0);
			LCD_displayString("FAN is ON");
		}

	}
}
