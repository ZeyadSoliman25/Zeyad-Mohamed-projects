#include <avr/io.h>
#include <util/delay.h>

int main(){
	DDRB &= ~(1<<0);
	DDRC |= (1<<0);
	PORTC |= (1<<0);
	PORTB |= (1<<0);
	while (1){
		_delay_ms(200);
		if (!(PINB & (1<<0))){
			PORTC ^= (1<<0);
		}
		else {
			PORTC &= (1<<0);
		}
	}
}
