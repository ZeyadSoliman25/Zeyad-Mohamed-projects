#include <stdio.h>

int number_ones(int num);

int main(){
	int num = 0;
	int count = 0;
	printf("Enter a number: ");
	scanf("%d",&num);
	count = number_ones(num);
}

int number_ones(int num){
	int continue_loop = 1;
	int count = 0;
	while (continue_loop){
		if (num == 1 || num == 0){
			continue_loop = 0;
		}
		else {
			if (num & 1 == 1){
				count += 1;
				num >>=1 ;
			}
			else {
				num >>=1 ;
			}
		}
	}
	return count;
}
