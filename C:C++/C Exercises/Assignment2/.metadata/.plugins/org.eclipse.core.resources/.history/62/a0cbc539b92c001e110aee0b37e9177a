#include <stdio.h>
#include <math.h>


char power_of_square_number(long num);


int main(){
	long num = 0;
	char can_be_written = 0;
	printf("Enter a number: ");
	scanf("%ld", &num);
	can_be_written = power_of_square_number(num);
	printf("%d", can_be_written);
}


char power_of_square_number(long num){
	char can_be_written = 0;
	for (long i = 2; i<= num; i++){
		for (long j = 2; j<= num; j++){
			if (log(num) == (j*log(i))){
				can_be_written = 1;
			}
		}
	}
	return can_be_written;
}
